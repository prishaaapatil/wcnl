<body>
<div class="container">
<h2>1. Change Background</h2>
<button onclick="document.body.style.backgroundColor='#'+Math.floor(Math.random()*16777215).toString(16)">Change Color</button>
</div>
<div class="container">
<h2>2. Even/Odd</h2>
<input type="number" id="num" placeholder="Enter number">
<button onclick="checkEvenOdd()">Even/Odd</button>
<div id="output"></div>
</div>
<div class="container">
<h2>3. Array Functions</h2>
<input type="text" id="arrInput" placeholder="Enter items comma separated">
<button onclick="arrayDemo()">Run Array</button>
<div id="arrayOutput"></div>
</div>
<script>
function getNum(){const n=parseInt(document.getElementById('num').value);return isNaN(n)?null:n;}
function checkEvenOdd(){const n=getNum();document.getElementById('output').textContent=n===null?'Enter number':n%2===0?'Even':'Odd';}
function arrayDemo(){let items=document.getElementById('arrInput').value.split(',').map(i=>i.trim()).filter(i=>i);if(items.length===0){document.getElementById('arrayOutput').textContent='Enter valid items';return;}const upper=items.map(i=>i.toUpperCase()),aItems=items.filter(i=>i.toLowerCase().startsWith('a')),longItem=items.find(i=>i.length>6)||'None';document.getElementById('arrayOutput').innerHTML=`Original: [${items}]<br>Upper: [${upper}]<br>Start A: [${aItems}]<br>Length>6: ${longItem}<br>Joined: ${items.join(', ')}`;}
</script>
