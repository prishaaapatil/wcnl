style.css
body{
  background:#f0f8ff;
  color:#222;
  font-family:Arial, sans-serif;
  text-align:center;
  padding:20px;
}
/* color, fonts, background */
h1{color:#4b0082;}
p span{color:#0077b6;font-weight:bold;}
/* lists */
.list{list-style:square inside;color:#333;}
.list li{margin:5px;}
/* tables */
table{margin:15px auto;border-collapse:collapse;width:60%;}
th,td{border:1px solid #999;padding:6px;}
th{background:#c7d2fe;}
tr:nth-child(even){background:#e0e7ff;}
/* selectors */
p.note{font-style:italic;}
a[href]{color:#4b0082;text-decoration:none;}
/* pseudo-classes */
a:hover{color:#00b4d8;}
button:hover{background:#4b0082;color:white;cursor:pointer;}
/* pseudo-element (no emoji) */
h1::after{
  content:" - Styled Page";
  color:#00b4d8;
  font-size:0.9em;
}
