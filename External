style.css
body{
  background:#f0f4ff;
  color:#222;
  font-family:Arial, sans-serif;
  text-align:center;
  padding:20px;
}
/* colors, fonts, bg */
h1{color:#4b0082;}
p span{color:#0077b6;font-weight:bold;}
/* lists */
.list{list-style:square inside;padding:0;}
.list li{margin:5px;color:#444;}
/* table */
table{margin:15px auto;border-collapse:collapse;width:60%;}
th,td{border:1px solid #aaa;padding:6px;}
th{background:#dbeafe;}
tr:nth-child(even){background:#eef2ff;}
/* selectors */
p.info{font-style:italic;}
a[href]{color:#4b0082;text-decoration:none;}
/* pseudo-classes */
a:hover{color:#00b4d8;}
button:hover{background:#4b0082;color:white;cursor:pointer;}
/* pseudo-elements */
h1::after{
  content:" âœ¨";
  color:#00b4d8;
}
