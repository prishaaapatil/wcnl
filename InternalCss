    body{
      background-color:#f0f8ff;
      color:#222;
      font-family:Arial, sans-serif;
      text-align:center;
    }
    h1{color:#4b0082;}
    p span{color:#0077b6;font-weight:bold;}
    /* Lists */
    ul{list-style:square inside;color:#333;}
    li{margin:5px;}
    /* Tables */
    table{margin:auto;border-collapse:collapse;width:60%;}
    th,td{border:1px solid #999;padding:6px;}
    th{background:#c7d2fe;}
    tr:nth-child(even){background:#e0e7ff;}
    /* Selectors */
    p.note{font-style:italic;}
    a[href]{color:#4b0082;text-decoration:none;}
    /* Pseudo Classes */
    a:hover{color:#00b4d8;}
    button:hover{background:#4b0082;color:white;cursor:pointer;}
    /* Pseudo Elements */
    h1::after{
      content:" âœ¨";
      color:#00b4d8;
    }
  </style>
</head>
